{{!-- <div class="main"> --}}

    <div class="card my-4" id="results-block" style="width: 70%; margin: auto;">
        <div class="card-body">
            <h3 class="card-title">Recipes</h3>
            <div class="back-to-profile text-right">
                <span><a href="/profile">Back to Profile</a>
                </span>
            </div>
            <hr>
            {{!-- <div class="fav-scroll"> --}}
                <ul id="insert-results-here">
                    {{#each data}}
                    <li>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card-header">
                                    <h3 class="card-title">{{this.title}}</h3>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <img src="{{this.pic}}" class="img-fluid" style="width: auto; height: 207;">
                            </div>
                            <div class="col-lg-6">
                                <div class="userinfo">
                                    <h5>Nutrition Profile (per serving)</h5>
                                    <div class="recipe-nutrition mt-2" data-serves="{{this.serves}}" id="list-{{this.id}}">
                                        <p>Calories: {{this.calories}}</p>
                                        <p>Protein: {{this.protein}}g</p>
                                        <p>Carbs: {{this.carbs}}g</p>
                                        <p>Fats: {{this.fats}}g
                                        </p>
                                        <p id="recipe-servings">Servings: {{this.serves}}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 text-right">


                                <a id="recipe-link" href="{{this.url}}" target="_blank">Get the recipe!</a>
                                <br><button class="addToFavsBtn fa fa-heart p-2 mt-2" data-json='{{this.jsonData}}'></button>

                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
                {{!-- </div> --}}
        </div>
    </div>

    {{!-- </div> --}}

<script src="/js/addToFavs.js"></script>
<script src="/js/showBreakdown.js"></script>