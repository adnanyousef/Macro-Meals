<div class="card my-4" id="results-block" style="width: 70%; margin: auto;">
    <div class="card-body">
        <span id=home></span>
        <div class="card" id="perMealBreakdown">
            <div class="card-body">
                <span id="smallTitle" style="font-size: 2.8rem; line-height: .9;">Recipes</span><span id="smallHead">
                    (Based on
                    {{suggested.mealCount}}
                    meals per day-
                    recommended nutrition per
                    meal)</span>
                <hr style="margin-bottom: 0;">
                <div class="text-black">
                    <div class="row" style="line-height: 1;">
                        <div class="resultbox">
                            <div class=" card summaryresult">
                                <span class="yellow_circle_result">
                                    <p class="circle-text-result">{{suggested.calsPerMeal}}</p>
                                </span>
                                <div class="card-text text-center">Calories</div>
                            </div>
                            <div class="card summaryresult">
                                <span class="green_circle_result">
                                    <p class="circle-text-result">{{suggested.proteinPerMeal}}g</p>
                                </span>
                                <div class="card-text text-center">Protein</div>
                            </div>
                        </div>
                        <div class="resultbox">
                            <div class="card summaryresult">
                                <span class="blue_circle_result">
                                    <p class="circle-text-result">{{suggested.carbsPerMeal}}g</p>
                                </span>
                                <div class="card-text text-center">Carbs</div>
                            </div>
                            <div class="card summaryresult">
                                <span class="red_circle_result">
                                    <p class="circle-text-result">{{suggested.fatsPerMeal}}g</p>
                                </span>
                                <div class="card-text text-center">Fat</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="back-to-profile text-right">
                    <span><a href="/profile">Back</a>
                    </span>
                </div>
            </div>
        </div>

        <ul id="insert-results-here">
            {{#each data}}
            <li>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card-header">
                            <h3 class="card-title">{{this.title}}</h3>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4" id="photoCol">
                        <img src="{{this.pic}}" class="img-fluid" style="width: auto; height: 207;">
                    </div>
                    <div class="col-lg-6" id="nutritionCol">
                        <div class="userinfo">
                            <h5>Nutrition Profile (per serving)</h5>
                            <div class="recipe-nutrition mt-2" data-serves="{{this.serves}}" id="list-{{this.id}}">
                                <p>Calories: {{{this.calories.html}}}</p>
                                <p>Protein: {{{this.protein.html}}}</p>
                                <p>Carbs: {{{this.carbs.html}}}</p>
                                <p>Fats: {{{this.fats.html}}}</p>
                                <p id="recipe-servings">Servings: {{this.serves}}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 text-right">
                        <i class="fas fa-heart addToFavsBtn" data-json='{{this.jsonData}}'></i>
                        <br>
                        <a id="recipe-link" href="{{this.url}}" target="_blank">Recipe</a>
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
        <div class="back-to-profile text-right">
            <span><a href="#home" id="homeLink"><i class="fas fa-arrow-up"></i></a>
            </span>
        </div>
    </div>
</div>

<script>
    // Scroll Animation
    $(document).ready(function () {
        $("#homeLink").on("click", function (event) {
            event.preventDefault();
            var hash = this.hash;

            if ($(hash).offset()) {
                $("html, body").animate(
                    {
                        scrollTop: $(hash).offset().top
                    },
                    800,
                    function () { }
                );
            }
        });
    });
</script>
<script src="/js/addToFavs.js"></script>
<script src="/js/showBreakdown.js"></script>